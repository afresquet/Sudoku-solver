{
  // install the following packages:
  // yarn add --dev eslint babel-eslint eslint-plugin-import eslint-plugin-react eslint-plugin-jsx-a11y eslint-config-airbnb prettier eslint-config-prettier eslint-plugin-prettier

  "extends": ["airbnb", "prettier", "prettier/react"],
  "plugins": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-underscore-dangle": [1, { "allow": ["_id"] }],
    "jsx-a11y/anchor-is-valid": [ 1, { "allow": ["Link"]}],
    "no-bitwise": ["error", { "int32Hint": true }],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
  }
}